<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Catchup" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary light theme. -->
        <item name="background">@color/catchup_background</item>
        <item name="colorPrimary">@color/catchup_navbar_background</item>
        <item name="colorPrimaryVariant">@color/catchup_grey_dark</item>
        <item name="colorPrimarySurface">@color/catchup_grey_light</item>

        <!-- Secondary light theme. -->
        <item name="colorSecondary">@color/catchup_primary</item>

        <!-- Tertiary light theme. -->
        <item name="colorTertiary">@color/catchup_featured</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/background</item>
    </style>
</resources>