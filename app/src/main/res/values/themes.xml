<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Catchup" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:colorBackground">@color/catchup_background</item>
        <item name="colorPrimary">@color/catchup_primary</item>
        <item name="colorPrimaryVariant">@color/catchup_grey_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/catchup_primary</item>
        <item name="colorSurface">@color/catchup_background</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:statusBarColor">@color/catchup_navbar_background</item>
        <item name="android:navigationBarColor">@color/catchup_navbar_background</item>

        <!-- Toolbar style -->
        <item name="toolbarStyle">@style/ToolbarStyle</item>
    </style>

    <!-- Toolbar style properties -->
    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="background">@color/catchup_navbar_background</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/catchup_grey_light</item>
    </style>

    <style name="ButtonBackground" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/catchup_grey_light</item>
    </style>

    <!-- Dialog animation style -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_animation</item>
        <item name="android:windowExitAnimation">@anim/slide_out_animation</item>
    </style>
</resources>
